<Window x:Class="Weather2pr8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather2pr8"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="450" SizeToContent="Width">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="tb" Width="250"/>
            <Button Click="search" Width="25" Content="🔍"/>
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" HorizontalAlignment="Right" Grid.Row="1">
            <StackPanel x:Name="panel"/>
        </ScrollViewer>
    </Grid>
</Window>
