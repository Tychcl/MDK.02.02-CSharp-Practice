<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="FTP Client" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Connection Panel -->
        <GroupBox Grid.Row="0" Grid.ColumnSpan="2" Header="Connection" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtLogin" Width="120" Margin="5" Text="tychcl"/>
                <PasswordBox x:Name="txtPassword" Width="120" Margin="5" Password="f1l1n"/>
                <Button x:Name="btnConnect" Content="Connect" Click="BtnConnect_Click" Margin="5" Width="80"/>
                <TextBlock x:Name="txtConnectionStatus" Margin="5" VerticalAlignment="Center" Foreground="Blue"/>
            </StackPanel>
        </GroupBox>

        <!-- Current Path -->
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" x:Name="txtCurrentPath" Margin="5" FontWeight="Bold"/>

        <!-- Files and Folders List -->
        <GroupBox Grid.Row="2" Header="Files and Folders" Margin="5">
            <ListView x:Name="listViewFiles" MouseDoubleClick="ListViewFiles_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                        <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="5" VerticalAlignment="Top">
            <Button x:Name="btnUpload" Content="Upload File" Click="BtnUpload_Click" Margin="5" Width="120" Height="30"/>
            <Button x:Name="btnDownload" Content="Download File" Click="BtnDownload_Click" Margin="5" Width="120" Height="30"/>
            <Button x:Name="btnRefresh" Content="Refresh" Click="BtnRefresh_Click" Margin="5" Width="120" Height="30"/>
            <Button x:Name="btnRoot" Content="Root Directory" Click="BtnRoot_Click" Margin="5" Width="120" Height="30"/>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
