<UserControl x:Class="Weather2pr8.Plate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Weather2pr8"
              mc:Ignorable="d" 
             d:DesignHeight="300"
             MinHeight="300" Width="auto">

    <UserControl.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,5,0,0"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Height="auto" Grid.Row="0" Content="00 Month, Day" FontSize="16" FontWeight="Bold"/>
        <DataGrid x:Name="dataGrid" Style="{StaticResource DataGridStyle}" Grid.Row="1">
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupItem">
                                        <Expander IsExpanded="True" Margin="0,10,0,10">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Path=Name[0]}" Style="{StaticResource GroupHeaderStyle}"/>
                                                    <StackPanel Margin="10,0,0,0">
                                                        <TextBlock Text="{Binding Path=Name, StringFormat='{}{0,2}'}" 
                                                                   Style="{StaticResource SubHeaderStyle}"/>
                                                        <TextBlock Text="{Binding Path=Items[0].UvIndex}" 
                                                                   FontSize="12" Margin="0,5,0,0"/>
                                                        <TextBlock Text="{Binding Path=Items[0].MagneticField}" 
                                                                   FontSize="12" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </DataGrid.GroupStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Время суток" Binding="{Binding TimeOfDay}" Width="auto"/>
                <DataGridTextColumn Header="Температура" Binding="{Binding TemperatureRange}" Width="auto"/>
                <DataGridTextColumn Header="Погода" Binding="{Binding WeatherCondition}" Width="auto"/>
                <DataGridTextColumn Header="Давление, мм рт. ст." Binding="{Binding Pressure}" Width="auto"/>
                <DataGridTextColumn Header="Влажность" Binding="{Binding Humidity}" Width="auto"/>
                <DataGridTextColumn Header="Ветер, м/с" Binding="{Binding WindSpeed}" Width="auto"/>
                <DataGridTextColumn Header="Направление" Binding="{Binding WindDirection}" Width="auto"/>
                <DataGridTextColumn Header="Ощущается как" Binding="{Binding FeelsLike}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
